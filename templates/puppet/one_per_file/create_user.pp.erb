class <%= @item.module_name %>::<%= @item.name %> {
  user {'<%= @item.name %>':
    ensure     => present,
    managehome => true,
    <% if @item.provider %>
    provider   => '<%= @item.provider %>',
    <% end %>
    <% if @item.userid %>
    uid        => '<%= @item.userid %>',
    <% end %>
    <% if @item.groupid %>
    gid        => '<%= @item.groupid %>',
    <% end %>
    <% if @item.homedir %>
    home       => '<%= @item.homedir %>',
    <% end %>
    <% if @item.shell %>
    shell      => '<%= @item.shell %>',
    <% end %>
  }
}

class <%= @files.first.module_name %>::<%= @files.first.class_name %> {
<% @files.each do |f| %>
  file {'<%= f.path %>':
    ensure => <%= f.type %>,
    <% if f.source %>
    source => '<%= f.source %>',
    <% end %>
    <% if f.owner %>
    owner  => '<%= f.owner %>',
    <% end %>
    <% if f.mode %>
    mode   => '<%= f.mode %>',
    <% end %>
  }
<% end %>
}

class <%= @items.first.module_name %>::<%= @items.first.class_name %> {
<% @items.each do |item| %>
  file {'<%= item.path %>':
    ensure => <%= item.type %>,
    <% if item.source %>
    source => '<%= item.source %>',
    <% end %>
    <% if item.owner %>
    owner  => '<%= item.owner %>',
    <% end %>
    <% if item.mode %>
    mode   => '<%= item.mode %>',
    <% end %>
  }
<% end %>
}

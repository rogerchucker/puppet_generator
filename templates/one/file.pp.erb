class <%= @file.module_name %>::<%= @file.name %> {
  file {'<%= @file.path %>':
    ensure => <%= @file.type %>,
    <% if @file.source %>
    source => '<%= @file.source %>',
    <% end %>
    <% if @file.owner %>
    owner  => '<%= @file.owner %>',
    <% end %>
    <% if @file.mode %>
    mode   => '<%= @file.mode %>',
    <% end %>
  }
}
